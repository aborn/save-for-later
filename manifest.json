{
	"manifest_version": 2,
	"name": "Save for later",
	"version": "1.0",

	"description": "Saves all tabs in the window to be used for later",

	"icons": {
		"48": "icons/main.png"
	},

	"permissions": ["tabs", "storage"],

	"browser_action": {
		"default_icon": "icons/main.png",
		"default_title": "Save for later",
		"default_popup": "popup/main.html",
		"browser_style": true
	}
}
